{
	"name": "pn-platform",
	"version": "0.0.1-beta",
	"description": "專案",
	"scripts": {
		"lint": "tslint",
		"test": "jest",
		"start": "nodemon",
		"dev": "nodemon",
		"fdev": "ts-node server/index.ts -d",
		"storybook": "start-storybook"
	},
	"nodemonConfig": {
		"watch": [
			"server"
		],
		"ext": "ts",
		"ignore": [
			"spec/**/*.spec.ts"
		],
		"exec": "ts-node ./server/index.ts"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"globals": {
			"ts-jest": {
				"diagnostics": {
					"ignoreCodes": [
						2688
					]
				}
			}
		}
	},
	"prettier": {
		"jsxSingleQuote": true,
		"trailingComma": "all",
		"singleQuote": true,
		"arrowParens": "always",
		"printWidth": 90
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"browser": true
		},
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"prettier",
			"react"
		],
		"rules": {
			"@typescript-eslint/no-var-requires": 0,
			"@typescript-eslint/explicit-function-return-type": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"@typescript-eslint/triple-slash-reference": 0,
			"require-atomic-updates": 0,
			"react/jsx-max-props-per-line": [
				1,
				{
					"maximum": 1,
					"when": "multiline"
				}
			],
			"max-len": [
				1,
				90
			]
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/recommended",
			"plugin:import/typescript"
		]
	},
	"license": "ISC",
	"dependencies": {
		"amqplib": "0.5.3",
		"axios": "0.18.1",
		"body-parser": "1.18.3",
		"commander": "3.0.0",
		"compression": "1.7.3",
		"dotenv": "7.0.0",
		"eslint-plugin-import": "^2.18.2",
		"express": "4.16.4",
		"express-fileupload": "^1.1.5",
		"express-session": "1.15.6",
		"file-loader": "3.0.1",
		"grunt": "1.0.3",
		"grunt-cli": "1.3.2",
		"helmet": "3.15.0",
		"jest": "23.6.0",
		"jsonwebtoken": "8.5.1",
		"lodash": "4.17.15",
		"moment": "2.24.0",
		"mongoose": "5.4.19",
		"morgan": "1.9.1",
		"nunjucks": "3.1.7",
		"passport": "0.4.0",
		"passport-jwt": "4.0.0",
		"passport-local": "1.0.0",
		"passport-local-mongoose": "5.0.1",
		"react": "16.8.0",
		"react-dom": "16.7.0",
		"react-hot-loader": "4.6.5",
		"react-rnd": "^10.0.0",
		"react-router-dom": "4.3.1",
		"react-router-transition": "1.3.0",
		"semantic-ui-css": "2.4.1",
		"semantic-ui-react": "0.87.3",
		"typescript": "3.2.2",
		"uglifyjs-webpack-plugin": "^2.2.0",
		"url-loader": "1.1.2",
		"vis": "4.21.0",
		"webpack-cli": "3.2.0",
		"ws": "7.0.0"
	},
	"devDependencies": {
		"@babel/core": "7.2.2",
		"@babel/plugin-proposal-class-properties": "7.5.5",
